# ============================================
# Learnify Self-Host Configuration Template
# ============================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit the .env file to version control!
# ============================================

# Application Version
# Available values: stable, beta, canary
AFFINE_REVISION=canary

# Server Port Configuration
PORT=3010

# ============================================
# Storage Locations
# ============================================
# Persistent storage locations for application data
# Update these paths according to your server setup
VOLUME_BASE_PATH=/path/to/your/volumes
UPLOAD_LOCATION=/path/to/your/volumes/storage
CONFIG_LOCATION=/path/to/your/volumes/config

# ============================================
# Database Configuration (Supabase)
# ============================================
DB_URL=your-supabase-db-url.supabase.co
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-database-password
DB_DATABASE=postgres

# Full database connection URL
# Format: postgresql://[username]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:your-database-password@your-supabase-db-url.supabase.co:5432/postgres

# ============================================
# Email/Mailer Configuration
# ============================================
MAILER_HOST=smtp.your-mail-provider.com
MAILER_PORT=465
MAILER_USER=your-email@example.com
MAILER_PASSWORD=your-email-password
MAILER_SENDER=Your-Mailer-Name<your-email@example.com>
MAILER_IGNORE_TLS=false

# ============================================
# Redis Configuration
# ============================================
REDIS_SERVER_HOST=redis

# ============================================
# Node.js Configuration
# ============================================
# Force IPv6 for Supabase connection (Supabase only supports IPv6)
NODE_OPTIONS=--dns-result-order=ipv6first
UV_THREADPOOL_SIZE=128
